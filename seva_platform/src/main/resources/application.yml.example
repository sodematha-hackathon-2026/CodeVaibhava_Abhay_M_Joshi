server:
  port: 8080
  servlet:
    context-path: /

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/your_database_name
    username: your_db_username
    password: your_db_password
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
  mail:
    host: smtp.gmail.com
    port: 587
    username: your-email@gmail.com
    password: your-app-specific-password
    properties:
      mail.smtp.auth: true
      mail.smtp.starttls.enable: true
  # Disable Flyway migration
  flyway:
    enabled: false

app:
  firebase:
    serviceAccountPath: classpath:firebase-service-account.json
  razorpay:
    keyId: rzp_test_xxxxxxxxxxxxx
    keySecret: your_razorpay_secret_key
  admin:
    uids: uid1,uid2,uid3
  mail:
    from: your-email@gmail.com
    to: admin@yourdomain.com

# Debug logging
logging:
  level:
    com.seva.platform: DEBUG
    org.springframework.web: DEBUG
    org.springframework.security: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE

# INSTRUCTIONS:
# 1. Copy this file to 'application.yml' in src/main/resources/
# 2. Replace all placeholder values with your actual configuration
# 3. NEVER commit 'application.yml' with real credentials to Git
# 4. Make sure 'application.yml' is in your .gitignore
#
# PLACEHOLDERS TO REPLACE:
# - your_database_name: Name of your PostgreSQL database
# - your_db_username: Database username
# - your_db_password: Database password
# - your-email@gmail.com: Your Gmail address
# - your-app-specific-password: Gmail app-specific password (not your regular password)
# - rzp_test_xxxxxxxxxxxxx: Your Razorpay test key ID
# - your_razorpay_secret_key: Your Razorpay secret key
# - uid1,uid2,uid3: Comma-separated Firebase user IDs for admin access
# - admin@yourdomain.com: Email address to receive notifications
#
# SECURITY NOTES:
# - For Gmail, generate an app-specific password: https://support.google.com/accounts/answer/185833
# - Keep firebase-service-account.json out of Git (add to .gitignore)
# - Use environment-specific profiles (dev/prod) for different configurations
